#imports the smtp library into your code
import smtplib

#put your email as the sender
your_email = "Your Email"
#put your password associated with your email
your_password = "Your Password"

with smtp.SMTP("smtp.gmail.com") as transmission:
    transmission.starttls()
    transmission.login(user=your_email, password=password)
    transmission.sendmail(
          from_addr=your_email, password=password)
          to_addrs="the recipient's email address",
          msg="Subject:Your desired subject\n\nFollowed by your message")
    )
